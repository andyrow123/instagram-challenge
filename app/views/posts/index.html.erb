<div class="">
  <% @posts.each do |post| %>
      <div class="post">
        <div class="post-head">
          <%= post.user.user_name %>
        </div>
        <div class="image center-block">
          <%= link_to (image_tag post.image.url(:web, :preview), class: 'img-responsive'), post_path(post) %>
        </div>
        <p class="post-text"><%= post.text %></p>
      </div>
  <% end %>
</div>


